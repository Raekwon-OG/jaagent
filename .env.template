# Job Application Agent Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# API KEYS & CREDENTIALS
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# APPLICANT CONFIGURATION
# =============================================================================
# Your current country (full name or ISO code)
APPLICANT_COUNTRY=Nigeria
APPLICANT_COUNTRY_CODE=NG

# Your contact information for cover letters
CANDIDATE_NAME=Your Full Name
CANDIDATE_ADDRESS=Your Street Address
Your City, State/Province
Your Country, Postal Code
CANDIDATE_EMAIL_PHONE=your.email@example.com
+234-XXX-XXX-XXXX

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
# Storage mode: "local" or "cloud"
STORAGE_MODE=local

# Local storage paths
BASE_RESUMES_DIR=base_resumes
APPLICATIONS_DIR=data/applications
PROCESSED_JOBS_FILE=data/processed_jobs.json

# Google Drive configuration (for cloud mode)
GOOGLE_DRIVE_FOLDER_NAME=Job Applications
GOOGLE_DRIVE_SUBFOLDER_STRUCTURE=true

# =============================================================================
# JOB PROCESSING LIMITS
# =============================================================================
# Maximum jobs to process per run
MAX_JOBS_PER_RUN=5

# Maximum job postings to scrape before filtering
MAX_SCRAPE_LIMIT=50

# =============================================================================
# JOB SOURCES CONFIGURATION
# =============================================================================
# CSV file with job source URLs
JOB_SOURCES_CSV=config/job_sources.csv

# LinkedIn fallback settings
LINKEDIN_BASE_URL=https://www.linkedin.com/jobs/search
LINKEDIN_DEFAULT_LOCATION=Worldwide
LINKEDIN_DEFAULT_KEYWORDS=software engineer OR IT support OR full stack developer
LINKEDIN_EXPERIENCE_LEVELS=entry,associate,mid-senior

# =============================================================================
# GOOGLE SERVICES CONFIGURATION
# =============================================================================
# Google Sheets
SHEETS_CREDENTIALS_FILE=config/sheets_credentials.json
SHEETS_DOC_NAME=Job Application Tracker
SHEETS_WORKSHEET_NAME=Sheet1

# Google Drive (for cloud storage)
DRIVE_CREDENTIALS_FILE=config/drive_credentials.json

# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================
# OpenAI models
CHAT_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-small

# AI thresholds
SIMILARITY_THRESHOLD=0.80
FIT_SCORE_THRESHOLD=8.5

# =============================================================================
# LOCATION & WORK PERMIT FILTERING
# =============================================================================
# Terms that indicate local work permit requirements (comma-separated)
RESTRICTIVE_LOCAL_TERMS=must have valid work permit,must be authorized to work,local applicants only,must already reside in,no visa sponsorship,must have work authorization,only citizens,permanent residents only,must be eligible to work,work permit required,authorization to work required,local candidates only,residents only,no sponsorship available

# Terms that indicate sponsorship availability (comma-separated)
POSITIVE_SPONSORSHIP_TERMS=visa sponsorship available,open to international applicants,work permit sponsorship,relocation assistance,willing to sponsor,global applicants welcome,sponsorship provided,visa support available,international candidates welcome,work authorization sponsorship,H1B sponsorship,visa assistance,sponsorship opportunities

# Countries known for tech visa sponsorship (comma-separated)
SPONSORSHIP_FRIENDLY_COUNTRIES=United States,Canada,United Kingdom,Germany,Netherlands,Sweden,Denmark,Norway,Australia,New Zealand,Singapore,Ireland,Switzerland,France,Austria,Belgium,Luxembourg

# =============================================================================
# FILE GENERATION SETTINGS
# =============================================================================
# Generate PDF files (true/false)
GENERATE_PDF=true

# Document filenames
RESUME_FILENAME=resume
COVER_LETTER_FILENAME=cover_letter
JOB_DETAILS_FILENAME=job_details.json

# =============================================================================
# LOGGING & DEBUGGING
# =============================================================================
# Enable debug mode (true/false)
DEBUG_MODE=true
LOG_LEVEL=INFO

# Save debug data (true/false)
SAVE_DEBUG_DATA=true
DEBUG_DATA_DIR=data/debug

# =============================================================================
# PROMPTS CONFIGURATION
# =============================================================================
# Prompts directory and filenames
PROMPTS_DIR=prompts
ALIGN_PROMPT_FILENAME=align_resume_cover_letter.txt
SCORE_PROMPT_FILENAME=score_fit.txt